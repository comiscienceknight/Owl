<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Owl.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Input="using:Telerik.UI.Xaml.Controls.Input"
    x:Class="OwlWindowsPhoneApp.View.FirstTimeEnterUserControl"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="400">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <!-- Title Panel -->
        <StackPanel Margin="15,0,0,0" Orientation="Horizontal"
			VerticalAlignment="Top">
            <Image Width="50" Height="50" Margin="-10,0,0,0"   Stretch="Fill" Source="ms-appx:///Assets/Tempo/logo.png"   />
            <TextBlock x:Name="TextBlock_PageTitle"  Text="Are you a Mocking Owl ? " 
				Margin="15,12,0,0" Opacity="0.8"
				Style="{ThemeResource HeaderTextBlockStyle}" 
				CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" 
				FontFamily="Global User Interface" FontSize="30"/>
        </StackPanel>

        <Rectangle Height="3" HorizontalAlignment="Stretch"
			VerticalAlignment="Top" Fill="#FFC94F17" Opacity="0.5" Margin="15,66,50,0"  />

        <Grid Margin="10,80,10,75"/>
        <StackPanel Margin="10,100,10,75" >
            <FlipView x:Name="FlipView_Profile" Margin="0,10,0,10" Background="{x:Null}"
				Height="360"  VerticalAlignment="Center" >
                <Grid>
                    <TextBlock Text="1, Pick a profile picture" 
						Margin="15,12,0,0" Opacity="0.8"
						Style="{ThemeResource HeaderTextBlockStyle}" 
						CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" 
						FontFamily="Global User Interface" FontSize="22"/>
                    <Border Margin="10,60,10,0" BorderBrush="#CC7C1010"
						BorderThickness="5">
                        <Image x:Name="Image_Profile" Tapped="Image_Profile_Tapped"
							VerticalAlignment="Center" Source="ms-appx:///Assets/Tempo/logo.png" 
							Stretch="None"/>
                    </Border>
                </Grid>
                <Grid >
                    <TextBlock Text="2, I'm a " 
						Margin="15,12,0,0" Opacity="0.8"
						Style="{ThemeResource HeaderTextBlockStyle}" 
						CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" 
						FontFamily="Global User Interface" FontSize="22"/>
                    <Grid Margin="0,60,20,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Height="200"  x:Name="Image_Boy" Tapped="Image_Boy_Tapped"
							VerticalAlignment="Center" Source="ms-appx:///Assets/thinking_man_Clip_Art.png" 
							Stretch="Uniform"  />
                        <Image Grid.Column="1"  x:Name="Image_Girls" Tapped="Image_Girls_Tapped"
							VerticalAlignment="Center" Source="ms-appx:///Assets/sexygirl.png" 
							Stretch="None"/>
                    </Grid>
                </Grid>
                <Grid >
                    <TextBlock x:Name="TextBlock_HiSex"  Text="3, Hi " 
						Margin="15,12,0,0" Opacity="0.8"
						Style="{ThemeResource HeaderTextBlockStyle}" 
						CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" 
						FontFamily="Global User Interface" FontSize="22"/>
                    <Grid Margin="0,50,20,0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Input:RadAutoCompleteBox x:Name="RadAutoCompleteBox_Search" 
                                                  Grid.Row="0" Watermark="Search" 
                                                  Header="Search Venues"
                                                  HorizontalAlignment="Stretch" 
                                                  AutosuggestFirstItem="False" 
                                                  IsDropDownOpen="True" DropDownMaxHeight="400" 
                                                  FilterMemberPath="Avenue" FilterMode="Contains"
                                                  Margin="20,5,20,10"  FilterDelay="0:0:0.5"
                                                  LostFocus="RadAutoCompleteBox_Search_LostFocus">
                            <Input:RadAutoCompleteBox.HeaderStyle>
                                <Style TargetType="ContentControl">
                                    <Setter Property="FontSize" Value="22"/>
                                    <Setter Property="Foreground" Value="#0083EF"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                    <Setter Property="FontWeight" Value="ExtraLight"/>
                                </Style>
                            </Input:RadAutoCompleteBox.HeaderStyle>
                            <Input:RadAutoCompleteBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Avenue}" 
                                               FontSize="16" FontFamily="Segoe UI" 
                                               TextWrapping="Wrap" 
                                               Margin="5,0,0,0"/>
                                </DataTemplate>
                            </Input:RadAutoCompleteBox.ItemTemplate>
                        </Input:RadAutoCompleteBox>

                        <ProgressBar Grid.Row="0" Margin="20,15,20,10" 
                                     x:Name="ProgressBar" IsIndeterminate="True" 
                                     HorizontalAlignment="Stretch" />

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,35,0,0">
                            <TextBlock Text="Type in to choose from the available movies" FontSize="20" TextWrapping="Wrap" Width="360" Foreground="#808080" FontWeight="SemiLight"/>
                            <Button x:Name="LostFocusButton" IsHitTestVisible="False" Opacity="0"/>
                        </StackPanel>
                    </Grid>
                </Grid>


            </FlipView>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" 
				HorizontalAlignment="Center" VerticalAlignment="Top">
                <AppBarButton x:Name="AppBarButton_Back" Click="AppBarButton_Back_Click"
					Margin="0,0" VerticalAlignment="Bottom"  Icon="Back">
                    <AppBarButton.RenderTransform>
                        <CompositeTransform ScaleX="1.5" ScaleY="1.5"/>
                    </AppBarButton.RenderTransform>
                </AppBarButton>
                <AppBarButton x:Name="AppBarButton_Next" Click="AppBarButton_Next_Click" 
					Margin="0,0" VerticalAlignment="Bottom"  Icon="Forward"  >
                    <AppBarButton.RenderTransform>
                        <CompositeTransform ScaleX="1.5" ScaleY="1.5"/>
                    </AppBarButton.RenderTransform>
                </AppBarButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

<Page
    x:Class="Owl.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Owl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding Main, Source={StaticResource Locator}}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:Name="StackPanel_SignIn" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,0,0,50">
            <TextBlock HorizontalAlignment="Center"
                       FontSize="35" Margin="0,0,0,10" FontFamily="Segoe UI Semilight">owl</TextBlock>
            <StackPanel HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="User Id" HorizontalAlignment="Center"
                           FontSize="24"/>
                <TextBox x:Name="TextBox_UserName" MinWidth="200" HorizontalAlignment="Center"
                         FontSize="22"/>
                <TextBlock Text="Password" Margin="0,5,0,0" HorizontalAlignment="Center"
                           FontSize="24"/>
                <PasswordBox x:Name="PasswordBox_Password" MinWidth="200" HorizontalAlignment="Center" 
                             FontSize="22"/>
                <Button x:ConnectionId='2' x:Name="Button_SignIn" Content="Sign in"
                        Margin="0,5,0,0"                             HorizontalAlignment="Center" />
            </StackPanel>
            <Image x:ConnectionId='1' x:Name="Image_HotmailSignIn"  Margin="5,10" 
                   Width="200"                                    
                   Source="ms-appx:///Assets/SignIn/HotmailSignIn.png">
            </Image>
            <Image x:Name="Image_FacebookSignIn" Margin="5,10" 
                   Width="200"
                   Source="ms-appx:///Assets/SignIn/FacebookSignIn.png"></Image>
            <Image x:Name="Image_TwitterSignIn" Margin="5,10" 
                   Width="200"
                   Source="ms-appx:///Assets/SignIn/TwitterSignIn.png"></Image>
            <Image x:Name="Image_GmailSignIn" Margin="5,10" 
                   Width="200"
                   Source="ms-appx:///Assets/SignIn/GoogleSignIn.png"></Image>
        </StackPanel>

        <ProgressBar x:Name="ProgressBar_Loading" IsIndeterminate="False"
                     HorizontalAlignment="Stretch"        Visibility="Collapsed"
                     VerticalAlignment="Center"/>
    </Grid>
</Page>


<UserControl
    x:Class="OwlWindowsPhoneApp.PostsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OwlWindowsPhoneApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    DataContext="{Binding Posts, Source={StaticResource Locator}}"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <DataTemplate x:Key="ImageTextListCollectionTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <Border Height="125" Width="175" Margin="5,2,0,15">
                    <Image Source="{Binding Path=Profile}" Stretch="UniformToFill"/>
                </Border>
                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,4,0,10">
                    <TextBlock Text="{Binding Path=Place}"  FontSize="22" 
                       Margin="10,0,0,3" TextTrimming="WordEllipsis" />
                    <TextBlock Text="{Binding Path=Require}"
                       Margin="10,3,0,3" TextTrimming="WordEllipsis" 
                       HorizontalAlignment="Left" FontSize="17" Opacity="0.5" FontFamily="Global User Interface"/>
                    <TextBlock Text="{Binding Path=Description}"  HorizontalAlignment="Left"
                               Width="200" MaxHeight="50"
                       Margin="10,3,0,3" FontSize="14" TextTrimming="WordEllipsis" TextWrapping="Wrap" FontFamily="Global User Interface"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <local:ItemClickedConverter x:Name="ItemClickedConverter" />
    </UserControl.Resources>
    <Grid>
        <ListView x:Name="ListView_Posts"  HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Path=PostCollection}"
                  VerticalAlignment="Stretch" IsItemClickEnabled="True"
                  ItemTemplate="{StaticResource ImageTextListCollectionTemplate}">
            <i:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="ItemClick">
                    <core:InvokeCommandAction Command="{Binding ItemSelectedCommand}"
                                              InputConverter="{StaticResource ItemClickedConverter}"/>
                </core:EventTriggerBehavior>
                <core:EventTriggerBehavior EventName="Loaded">
                    <core:InvokeCommandAction Command="{Binding ListViewPostLoadedCommand}"/>
                </core:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </ListView>

        <ProgressBar x:Name="ProgressBar_Loading" IsIndeterminate="False"
                     HorizontalAlignment="Stretch"        Visibility="Collapsed"
                     VerticalAlignment="Center"/>
    </Grid>
</UserControl>


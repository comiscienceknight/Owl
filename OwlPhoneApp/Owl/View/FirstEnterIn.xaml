<Page
    x:Class="Owl.FirstEnterIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Owl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <local:FirstTimeEnterUserControl 
            x:Name="UserControl_FirstTimeEnter">
        </local:FirstTimeEnterUserControl>
        <Grid x:Name="Grid_ImageEffects">
            
        </Grid>
        <Grid x:Name="Grid_Uploading" Visibility="Collapsed">
            <ProgressBar x:Name="ProgressBar_Loading" IsIndeterminate="True"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"/>
            <TextBlock Text="Creating your post..." 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
        <Button x:Name="Button_Skip" VerticalAlignment="Bottom"
                Click="Button_Skip_Click" Visibility="Collapsed"
                HorizontalAlignment="Left">Skip</Button>
    </Grid>
</Page>
